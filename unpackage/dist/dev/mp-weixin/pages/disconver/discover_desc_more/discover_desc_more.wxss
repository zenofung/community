	bottom: 0;
	z-index: 99;
	display: flex;
	align-items: center;
	margin-right: 20rpx;
}
.lines_msg {
	display: flex;
	height: 10rpx;
}
.msg_bottom-1 {
	width: 80%;
	background: #f1f1f1;
	border-radius: 40rpx;

.comment-content {
	width: 100%;
	height: auto;
	/* margin-top: 20rpx; */
}
.comment-content-2_1_img {
	height: 36rpx;
	width: 65rpx;
	line-height: 40rpx;
}
.comment-content-1 {
	display: flex;
	align-items: center;
}
.comment-content-1_image image {
	height: 50rpx;

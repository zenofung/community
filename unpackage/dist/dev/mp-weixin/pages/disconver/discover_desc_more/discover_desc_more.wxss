/* 评论 */
.comment {
	margin-top: 20rpx;
	width: 100%;
	height: 100rpx;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
}
.comment {
	color: black;
	font-size: 32rpx;
	display: flex;
	align-items: center;
	/* justify-content: center; */
}

